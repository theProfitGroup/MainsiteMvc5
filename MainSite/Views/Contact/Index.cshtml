    ViewBag.Title = "Prof IT Group";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- BEGIN MAIN CONTENT -->
<div class="container boxed">

    <div class="row">
        <h2 class="col-md-8 col-md-offset-2">Don't hesitate to send a message. It will be a pleasure for me to respond.</h2>
    </div>

    <hr class="medium" />

    <div class="row">
        <div class="col-md-8">

            <h3>Send a message</h3>
