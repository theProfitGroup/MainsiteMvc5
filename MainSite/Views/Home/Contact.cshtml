@using MainSite.Core
@{
    ViewBag.Title = "Contacts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts
{
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery.easing.1.3.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery.flexslider.js")"></script>

    <script src="https://maps.googleapis.com/maps/api/js?v=3.exp&amp;sensor=false"></script>
    
    <script type="text/javascript" src="@Url.Content("~/Scripts/bootstrap.min.js")"></script>    
    <script type="text/javascript" src="@Url.Content("~/Scripts/default.js")"></script>
}


<div class="row">
    <h2 class="col-md-8 col-md-offset-2">Don't hesitate to send a message. It will be a pleasure for me to respond.</h2>
</div>

<hr class="medium" />

<div class="row">
    <div class="col-md-8">

        <h3>Send a message</h3>
        <p>Lorem ipsum nulla per pharetra habitant egestas faucibus eget senectus amet, augue rutrum ac id libero amet felis massa euismod, congue diam egestas faucibus venenatis.</p>

        <!-- Begin Contact Form -->
        <form id="contact" action="#">
            <div class="row">
                <div class="form-group col-sm-6">
                    <input type="text" class="form-control" id="name" placeholder="Name">
                </div>
                <div class="form-group col-sm-6">
                    <input type="email" class="form-control" id="email" placeholder="Email">
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-12">
                    <textarea class="form-control" id="message" placeholder="Message"></textarea>
                </div>
            </div>
            <button type="submit" class="btn btn-custom no-margin yellow">Submit Message</button>
        </form>
        <!-- End Contact Form -->
    </div>

    <!-- Begin Address -->
    <div class="col-md-4">
        <h3>Postal address</h3>
        <div class="jumbotron custom-jumbotron">
            <address>
                <strong>@SiteSettings.CompanyName</strong><br>
                Zarechanskaya street 5/3<br>
                Office 405<br>
                Ukraine 29000 Kmelnitskiy
            </address>

            <address>
                <strong>Phone</strong><br>
                <abbr title="Phone">P:</abbr>
                +38 (098) 043-43-22                    
            </address>

            <address class="no-margin">
                <strong>Email Address</strong><br>
                <a href="mailto:#">@SiteSettings.CompanyEmail</a>
            </address>
        </div>
    </div>
    <!-- End Address -->
</div>

<hr class="medium" />

@*<div id="map"></div> commented due to Error in javascripts*@

<hr class="bottom" />


